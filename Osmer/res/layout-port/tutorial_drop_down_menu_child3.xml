<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvLaunchTutorialAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tutorial_launch_again"
            android:textAppearance="?android:attr/textAppearanceLarge" />

         <ImageView
             android:id="@+id/notificationChild0ImageView"
             style="@style/ImageView"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_margin="6dp"
             android:layout_weight="1"
             android:src="@drawable/tutorial_menu_launch_tutorial" />
  
        <TextView
            android:id="@+id/tvTutorialNotificationChild0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/tutorial_menu_launch_tutorial" />
        
    </LinearLayout>

