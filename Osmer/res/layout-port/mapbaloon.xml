<?xml version="1.0" encoding="utf-8"?>
<it.giacomos.android.osmer.widgets.mapview.MapBaloon
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/mapbaloon"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">
    <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      
        <TextView
            android:id="@+id/baloon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/baloon_close_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/baloon_close_button" />
        
        <ImageView
            android:id="@+id/baloon_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"       
            android:src="@drawable/window_close"
            android:clickable="true"
        />
        
        <ImageView
            android:id="@+id/baloon_icon"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/baloon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
             />
        
        
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/baloon_text"
            android:layout_below="@id/baloon_icon"
            android:textSize="5pt"   
        />
    </RelativeLayout>
</it.giacomos.android.osmer.widgets.mapview.MapBaloon>
