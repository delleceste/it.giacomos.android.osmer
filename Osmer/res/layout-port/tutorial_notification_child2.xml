<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tutorial_disable_notification_service"
            android:textAppearance="?android:attr/textAppearanceMedium" />

         <ImageView
             android:id="@+id/child0ImageView"
             style="@style/ImageView"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:src="@drawable/disable_notification_service" />
        
        <TextView
            android:id="@+id/tvTutorialReportChild0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/tutorial_howto_disable_notifications" />

    </LinearLayout>

