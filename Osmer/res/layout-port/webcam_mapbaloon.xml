<?xml version="1.0" encoding="utf-8"?>
<it.giacomos.android.osmer.widgets.mapview.MapBaloon xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapbaloon"
    style="@style/ImageView"
    android:layout_width="310dp"
    android:layout_height="280dp"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <!-- Title -->

        <!-- Close button -->

		<ImageView
		    android:id="@+id/baloon_icon"
		    style="@style/ImageView"
		    android:layout_width="300dp"
		    android:layout_height="225dp"
		    android:layout_alignParentBottom="false"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:scaleType="centerInside"
		    android:color="#0000FF00" />

        <ImageView
            android:id="@+id/baloon_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/window_close" />

        <!-- WEBCAM IMAGE -->

        <!-- WEBCAM associated text -->

        <TextView
            android:id="@+id/baloon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/baloon_icon"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="5pt" />

    </RelativeLayout>

</it.giacomos.android.osmer.widgets.mapview.MapBaloon>