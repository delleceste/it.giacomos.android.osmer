<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTutorialReportNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tutorial_report_notification_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/child0ImageView"
                style="@style/ImageView"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:scaleType="fitStart"
                android:src="@drawable/tutorial_report_notification" />

            <TextView
                android:id="@+id/tvTutorialReportChild0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:text="@string/tutorial_report_notification_text" />

        </LinearLayout>

    </LinearLayout>

