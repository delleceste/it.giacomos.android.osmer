<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todayRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <it.giacomos.android.osmer.pro.widgets.ODoubleLayerImageView
        android:id="@+id/todayImageView"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:src="@drawable/fvg_background2" />

    <ScrollView
        android:id="@+id/todayTextScrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0" >

        <it.giacomos.android.osmer.pro.widgets.ForecastTextView
            android:id="@+id/todayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" >

            <requestFocus>
            </requestFocus>
        </it.giacomos.android.osmer.pro.widgets.ForecastTextView>
    </ScrollView>

</LinearLayout>