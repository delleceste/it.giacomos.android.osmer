<?xml version="1.0" encoding="utf-8"?>
<it.giacomos.android.osmer.widgets.mapview.MapBaloon
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/mapbaloon"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
    android:paddingLeft="5px"
    android:paddingTop="5px"
    android:paddingRight="5px"
    android:paddingBottom="5px">
    <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
            android:id="@+id/baloon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10px"
             />
            
        <TextView
            android:id="@+id/baloon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/baloon_icon"/>
        
        <ImageView
            android:id="@+id/baloon_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10px"       
            android:src="@drawable/window_close"
            android:clickable="true"
        />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:id="@+id/baloon_text"
            android:layout_below="@id/baloon_icon"
            android:maxLength="160"   
            android:textSize="5pt"   
        />
    </RelativeLayout>
</it.giacomos.android.osmer.widgets.mapview.MapBaloon>
