<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
  <!--  outside eclipse
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    In Eclipse
    android:layout_width="400px" android:layout_height="800px"
   -->  
<RelativeLayout android:id="@+id/mainRelativeLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="horizontal"
	android:background="@drawable/shape_background_landscape">

	<it.giacomos.android.osmer.widgets.OViewFlipper
		android:id="@+id/viewFlipper1" android:layout_height="match_parent"
		android:layout_width="match_parent"  android:layout_alignParentLeft="true">

		<LinearLayout
		    android:id="@+id/homeRelativeLayout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >

			<it.giacomos.android.osmer.widgets.SituationImage
			    android:id="@+id/homeImageView"
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:layout_weight="1.0"
			    android:src="@drawable/fvg_background2" />

			<ScrollView
			    android:id="@+id/homeTextScrollView"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.0" >

				<it.giacomos.android.osmer.widgets.HomeTextView
				    android:id="@+id/homeTextView"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:inputType="none" >
					<requestFocus></requestFocus>
				</it.giacomos.android.osmer.widgets.HomeTextView>
			</ScrollView>
		</LinearLayout>

		<LinearLayout android:id="@+id/todayRelativeLayout"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">

			<it.giacomos.android.osmer.widgets.ODoubleLayerImageView
			    android:id="@+id/todayImageView"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="1.0"
			    android:src="@drawable/fvg_background2" />

			<ScrollView
			    android:id="@+id/todayTextScrollView"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.0" >

				<it.giacomos.android.osmer.widgets.ForecastTextView
					android:inputType="none" 
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"
					android:id="@+id/todayTextView">
					<requestFocus></requestFocus>
				</it.giacomos.android.osmer.widgets.ForecastTextView>
			</ScrollView>
		</LinearLayout>

		<LinearLayout android:id="@+id/tomorrowRelativeLayout"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">

			<it.giacomos.android.osmer.widgets.ODoubleLayerImageView
			    android:id="@+id/tomorrowImageView"
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:layout_weight="1.0"
			    android:src="@drawable/fvg_background2" />

			<ScrollView
			    android:id="@+id/tomorrowTextScrollView"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.0"  >

				<it.giacomos.android.osmer.widgets.ForecastTextView
					android:inputType="none" android:layout_height="wrap_content"
					android:layout_width="match_parent" android:id="@+id/tomorrowTextView">
					<requestFocus></requestFocus>
				</it.giacomos.android.osmer.widgets.ForecastTextView>
			</ScrollView>
		</LinearLayout>
 
		<LinearLayout android:id="@+id/twoDaysRelativeLayout"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">

			<it.giacomos.android.osmer.widgets.ODoubleLayerImageView
			    android:id="@+id/twoDaysImageView"
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:layout_weight="1.0"
			    android:src="@drawable/fvg_background2" />

			<ScrollView
			    android:id="@+id/twoDaysTextScrollView"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.0" >

				<it.giacomos.android.osmer.widgets.ForecastTextView
					android:inputType="none" android:layout_height="wrap_content"
					android:layout_width="match_parent" android:id="@+id/twoDaysTextView">
					<requestFocus></requestFocus>
				</it.giacomos.android.osmer.widgets.ForecastTextView>
			</ScrollView>
		</LinearLayout>

		<RelativeLayout android:id="@+id/mapRelativeLayout"
			android:layout_width="match_parent" android:orientation="vertical"
			android:layout_height="wrap_content">
			<fragment
				android:id="@+id/mapview" 
				android:layout_width="match_parent"
				android:layout_height="match_parent" 
				android:name="com.google.android.gms.maps.MapFragment"
				>
			</fragment>
			
				
			<!-- debug  0AspVUt7XvDg8GeJotja4Y01qyL579hov2J2JPw -->
			
			<!--release  0AspVUt7XvDhAh_n6QG0MOW4uljL5qW6Iay0abw -->
        	
        	<TextView
        	    android:id="@+id/radarInfoTextView"
        	    android:layout_width="400dp"
        	    android:layout_height="wrap_content"
        	    android:layout_centerInParent="true"
        	    android:background="@drawable/rounded_text_box"
        	    android:linksClickable="true"
        	    android:padding="5dp"
        	    android:scrollbars="vertical"
        	    android:textColor="@android:color/black"
        	    android:textSize="12sp"
        	    android:visibility="visible" />
        		
		</RelativeLayout>

	</it.giacomos.android.osmer.widgets.OViewFlipper>		
</RelativeLayout>    

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>
