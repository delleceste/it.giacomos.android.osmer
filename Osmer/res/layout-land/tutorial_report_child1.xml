<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTutorialReportChild0Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tutorial_publish_report"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/child1ImageView"
            style="@style/ImageView"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/report_activity" />

        <TextView
            android:id="@+id/tvTutorialReportChild0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tvTutorialReportChild0" />

    </LinearLayout>

</LinearLayout>
